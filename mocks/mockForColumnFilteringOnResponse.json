{
    "swagger": "2.0",
    "info": {
        "title": "Crud Service",
        "description": "HTTP interface to perform CRUD operations on MongoDB collections defined in the API Console",
        "version": "3.2.3"
    },
    "paths": {
        "/users/": {
            "get": {
                "x-permission": {
                    "allow": "foobar",
                    "resourceFilter": {
                        "columnFilter": {
                            "onResponse": {
                                "policy": "filter_ft_not existing"
                            }
                        }
                    }
                }
            }
        },
        "/filters/": {
            "get": {
                "x-permission": {
                    "allow": "foobar",
                    "resourceFilter": {
                        "columnFilter": {
                            "onResponse": {
                                "policy": "projection_feature_toggle"
                            }
                        }
                    }
                }
            }
        }
    }
}