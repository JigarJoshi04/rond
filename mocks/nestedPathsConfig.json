{
    "paths": {
        "/foo/*": {
            "get": {"x-permission" : {"allow": "foo"}},
            "post": {"x-permission" : {"allow": "foo"}},
            "patch": {"x-permission" : {"allow": "foo"}},
            "put": {"x-permission" : {"allow": "foo"}},
            "delete": {"x-permission" : {"allow": "foo"}}
        },
        "/foo/bar/:params": {
            "get": {"x-permission" : {"allow": "foo_bar_params"}}
        },
        "/no/method": {},
        "/use/method/that/not/existing/*": {
            "delete": {"x-permission" : {"allow": "foo_bar_params"}}
        },
        "/foo/bar/*": {
            "get": {"x-permission" : {"allow": "foo_bar"}},
            "post": {"x-permission" : {"allow": "foo_bar"}},
            "patch": {"x-permission" : {"allow": "foo_bar"}},
            "put": {"x-permission" : {"allow": "foo_bar"}},
            "delete": {"x-permission" : {"allow": "foo_bar"}}
        },
        "/foo/bar/nested": {
            "get": {"x-permission" : {"allow": "foo_bar_nested"}}
        },
        "/foo/bar/nested/case/*": {
            "get": {"x-permission" : {"allow": "foo_bar_nested_case"}}
        }
    }
}
